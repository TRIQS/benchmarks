#!/usr/bin/env python


import sys, os
sys.path.append(os.getcwd() + "/..")
sys.path.append(os.getcwd() + "/../../common")
from model import *
import util

from h5 import HDFArchive
from triqs.utility import mpi
from pyed.TriqsExactDiagonalization import TriqsExactDiagonalization

# --------- Construct the ED solver ----------
fundamental_operators = util.get_fundamental_operators(h_imp)
ed = TriqsExactDiagonalization(h_imp, fundamental_operators, beta)
print("Free energy ", ed.get_free_energy())

# --------- Calculate the single-particle Green function ----------
G_tau = BlockGf(mesh=tau_mesh, gf_struct=gf_struct)

for bl, bl_size in gf_struct:
    for i, j in product(range(bl_size), range(bl_size)):
        ed.set_g2_tau(G_tau[bl][i,j], c(bl,i), c_dag(bl,j))

# -------- Save in archive ---------
with HDFArchive("../results/pyed.h5",'w') as res:
    res["G"] = G_tau
